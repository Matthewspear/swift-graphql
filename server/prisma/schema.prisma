generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  username String

  stars    Star[]
  comments Comment[]
}

model Character {
  id String @id @default(cuid())

  name        String
  description String
  image       String

  comics Comic[]
}

model Comic {
  id String @id @default(cuid())

  title       String
  description String
  thumbnail   String

  isbn      String
  pageCount Int

  characters Character[]
}

model Star {
  id String @id @default(cuid())

  kind        StarKind
  referenceId String
  user        User     @relation(fields: [userId], references: [id])
  userId      String

  @@unique([userId, referenceId])
}

enum StarKind {
  CHARACTER
  COMIC
}

model Comment {
  id String @id @default(cuid())

  message String
  picture File?   @relation(fields: [fileId], references: [id])
  fileId  String?

  user   User   @relation(fields: [userId], references: [id])
  userId String
}

model File {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  contentType String
  url         String

  comments Comment[]
}
